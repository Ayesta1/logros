<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/logros"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Encabezado de la aplicación -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi Aplicación"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center"/>

    <!-- Contenedor para el menú de opciones en cuadrícula -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="568dp"
        android:columnCount="3"
        android:id="@+id/gridCategories"
        android:padding="10dp"
        android:rowCount="3">

        <ImageButton

            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:src="@drawable/icono_anime"
            android:background="@drawable/boton_campo"
            android:text="Opción 1"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:src="@drawable/icono_fiesta"
            android:background="@drawable/boton_campo"
            android:text="Opción 2" />

        <!-- Opción 3 -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:src="@drawable/icono_gastronomia"
            android:background="@drawable/boton_campo"
            android:text="Opción 3" />

        <!-- Opción 4 -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:src="@drawable/icono_musica"
            android:background="@drawable/boton_campo"
            android:text="Opción 4" />

        <!-- Opción 5 -->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:src="@drawable/icono_18"
            android:background="@drawable/boton_campo"
            android:text="Opción 5" />

        <!-- Opción 6 -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/boton_campo"
            android:text="Opción 6" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/boton_campo"
            android:text="Opción 4" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/boton_campo"
            android:text="Opción 5" />

        <!-- Opción 6 -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:background="@drawable/boton_campo"
            android:text="Opción 6" />

    </GridLayout>

</LinearLayout>
