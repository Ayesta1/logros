<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="125dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/holo_orange_light"
                android:drawableLeft="@drawable/ic_default_icon"
                android:onClick="onButtonClick"
                android:text="Categoría 1"
                app:cornerRadius="32dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="125dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/holo_orange_light"
                android:drawableLeft="@drawable/ic_default_icon"
                android:onClick="onButtonClick"
                android:text="Categoría 2"
                app:cornerRadius="32dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="125dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/holo_orange_light"
                android:drawableLeft="@drawable/ic_default_icon"
                android:onClick="onButtonClick"
                android:text="Categoría 3"
                app:cornerRadius="32dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="125dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/holo_orange_light"
                android:drawableLeft="@drawable/ic_default_icon"
                android:onClick="onButtonClick"
                android:text="Categoría 4"
                app:cornerRadius="32dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="125dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/holo_orange_light"
                android:drawableLeft="@drawable/ic_default_icon"
                android:onClick="onButtonClick"
                android:text="Categoría 5"
                app:cornerRadius="32dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="125dp"
                android:layout_height="180dp"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/holo_orange_light"
                android:drawableLeft="@drawable/ic_default_icon"
                android:onClick="onButtonClick"
                android:text="Categoría 6"
                app:cornerRadius="32dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/supportButton"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="Soporte" />

            <Button
                android:id="@+id/profileButton"
                android:layout_width="125dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="Perfil" />
            <Button
                android:id="@+id/settingsButton"
                android:layout_width="125dp"
                android:layout_height="70dp"
                android:layout_margin="4dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:text="Ajustes" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>